$mobile-query      = "only screen and (max-width: 767px)"
$desktop-query     = "only screen and (min-width: 768px)"


@import "normalize.css"
@import "unsemantic-grid-responsive.css"

body
  background: #f5f5f5
  color: #333

h2
  color: #666
  font-size: 18px
  font-weight: normal

hr
  border: none
  border-top: 1px solid #eee
  margin: 2em 0

a
  color: #63a83c

  &:hover
    color: darken(#63A83C, 30%)

.grid-container
  background-color: #fff
  box-shadow: 0 0 3px 0 rgba(#000, 0.1)
  overflow: hidden

.full
  margin-left: -10px
  margin-right: -10px


.rs
  max-width: 100%
  display: block

.reset
  margin: 0
  padding: 0

.clear
  clear: both


.header
  height: 400px
  background: url(../images/header.jpg) center center no-repeat

  background-size: cover
  position: relative

  @media $mobile-query
    height: 250px

  h1
    display: none
    position: absolute
    font-size: 36px
    left: 0
    right: 0
    top: 50%
    bottom: auto
    height: 3em
    line-height: 3em
    // margin-top: -1.5em
    text-align: center
    background-color: rgba(#fff, 0.8)
    letter-spacing: 0.3em

    @media $mobile-query
      font-size: 32px


.about
  text-align: center

.contact
  text-align: center
  background-color: #eee
  border-bottom: 1px solid #ccc
  font-size: 18px
  padding: 3px

  @media $mobile-query
    text-align: left
    padding-left: 1em
    line-height: 1.5

  p
    margin: 1em 0 0.8em
    position: relative
    right: 0.3em

  small
    font-size: 0.9em
    color: #666

.topics
  padding-top: 10px

  small
    @media $mobile-query
      display: block
      margin: 0.5em 0

  li
    list-style: none

.topic
  background-color: #666
  border-radius: 3px
  margin: 6px 0
  color: #fff
  padding: 13px 0
  font-size: 18px
  display: block
  text-align: center
  box-shadow: 0 3px 3px rgba(#000, 0.1)
  text-shadow: 0 0 12px rgba(#355820, 0.8)

  @media $mobile-query
    font-size: 16px

  &.active
    box-shadow: none

  &:after
    content: '?'
    margin-left: 0.5em
    font-size: 0.8em
    display: inline-block
    width: 1.3em
    height: 1.3em
    line-height: 1.4em
    background-color: #fff
    color: #63A83C
    border-radius: 50%
    opacity: 0.3
    transition: all 0.3s

  &:hover:after
    opacity: 1
    box-shadow: 0 3px 3px rgba(#000, 0.1)

.topic-a
  background-color: #a6c647

.topic-b
  background-color: #90bc43

.topic-c
  background-color: #7ab240

.topic-d
  background-color: #63a83c

.topicList
  label
    cursor: pointer
    display: block

  > li
    position: relative

    input[type="checkbox"]
      display: none

    input[type="checkbox"]:checked + .topic-content
      opacity: 1
      transform: translate(0, 0)
      display: block


.topic-content
  opacity: 0
  position: absolute
  transform: translate(0, -3em)
  transition: all 0.5s
  z-index: 10
  pointer-events: none

  top: 100%
  left: -1em
  right: -1em
  padding: 0em 1em
  line-height: 1.5
  background: rgba(#fff, 0.9)
  border-radius: 5px
  border: 1px solid #eee
  box-shadow: 0 2px 3px rgba(#000, 0.2)
  font-size: 14px

.doctor
  background-color: #fdf6e3
  color: #907a00
  padding: 30px 60px 30px
  margin-top: 30px
  box-shadow: 0 0 5px 0px rgba(#907A4E,0.1)

  @media $mobile-query
    padding: 10px


  h2
    color: #907a00
    font-size: 24px

    small
      @media $mobile-query
        display: block

  h3
    font-size: 18px

  ul
    list-style-type: square
    padding-left: 1.5em
    line-height: 1.7


.cal
  padding: 30px 50px

  @media $mobile-query
    padding: 0
    margin: -30px -11px
    font-size: 15px

.cal-note
  text-align: center
  font-size: 0.9em
  color: #bc3b21

.cal-header 
  text-align: center
  padding: 3em 0 0

.cal-pointer-1, .cal-pointer-2
  padding: 0.5em 1em
  border-radius: 3px
  color: #fff
  background: #666
  text-shadow: 0 0 8px rgba(#000,0.6)

.cal-pointer-1
  margin-left: 2em;
  background-color: #a6c647

.cal-pointer-2
  margin-left: 2em;
  background-color: #c699c0

.table
  color: darken(#a6c647 , 40%)
  width: 100%
  max-width: 800px
  margin: 30px auto
  th, td
    padding: 20px 10px
    text-align: center
    border: 1px solid lighten(#a6c647 , 70%)

    @media $mobile-query
      padding: 8px 5px

  .first
    width: 15em

    @media $mobile-query
      width: 8em

  .on-1, .on-2
    color: #fff
    background-color: #ccc
    font-size: 32px
    line-height: 16px
  .on-1
    background-color: #a6c647
  .on-2
    background-color: #c699c0


.map
  position: relative

  h2
    position: absolute
    left: 0
    top: 0
    right: 0
    background-color: rgba(#000,0.35)
    color: #fff
    padding: 1em
    margin: 0
    text-shadow: 0 0 5px rgba(#000,0.9)

    @media $mobile-query
      padding: 0.5em 1em


  img
    display: block

.map:hover

  h2
    background-color: rgba(#46AEE3, 0.85)
    text-align: center
    transition: all 0.3s

    span
      display: none

    &:after
      content: '開啓 Google 地圖'
      color: #fff
      text-shadow: none


.bg-about
  background-color: #ebf9ff

.bg-doctor
  background-color: #e9fded



.knowledge
  padding: 4em
  max-width: 900px
  margin: 0 auto
  line-height: 1.6
  color: #555

  @media $mobile-query
    padding: 0

  .topic-single
    border-bottom: 1px solid #eee
    padding-bottom: 1em
    margin-bottom: 2em
